<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.w3.org/2001/XMLSchema 
                        file:/nl/tudelft/simulation/xml/XMLSchema.xsd"
    xmlns:dsol="http://www.simulation.tudelft.nl/dsol"
    targetNamespace="http://www.simulation.tudelft.nl/dsol">

    <!-- ###############################    TYPE DEFINITION     ############################# -->
	
    <!-- the basic distribution -->
    <xsd:complexType name="distribution">
        <xsd:attribute name="stream" type="xsd:string" default="default"/>
    </xsd:complexType>
    
    <!-- a probability between 0 and 1 (inclusive) -->
    <xsd:simpleType name="probability">
		<xsd:restriction base="xsd:double">
			<xsd:minInclusive value="0.0"/>
			<xsd:maxInclusive value="1.0"/>
		</xsd:restriction>
    </xsd:simpleType>
    
    <!-- a positive double -->
    <xsd:simpleType name="positiveDouble">
		<xsd:restriction base="xsd:double">
			<xsd:minExclusive value="0.0"/>
		</xsd:restriction>
    </xsd:simpleType>
    
    <!-- a non negative double -->
    <xsd:simpleType name="nonNegativeDouble">
		<xsd:restriction base="xsd:double">
			<xsd:minInclusive value="0.0"/>
		</xsd:restriction>
    </xsd:simpleType>
    
    <!-- the Bernoulli distribution -->
    <xsd:complexType name="bernoulli">
   		<xsd:complexContent>
	    	<xsd:extension base="dsol:distribution">
		        <xsd:attribute name="p" type="dsol:probability" use="required"/>
	    	</xsd:extension>
   		</xsd:complexContent>
    </xsd:complexType>

    <!-- the Beta distribution -->
    <xsd:complexType name="beta">
   		<xsd:complexContent>
            <xsd:extension base="dsol:distribution">
                <xsd:attribute name="alpha1" type="dsol:positiveDouble" 
                    use="required"/>
                <xsd:attribute name="alpha2" type="dsol:positiveDouble" 
                    use="required"/>
            </xsd:extension>
   		</xsd:complexContent>
    </xsd:complexType>

    <!-- the Triangular distribution -->
    <xsd:complexType name="triangular">
   		<xsd:complexContent>
	    	<xsd:extension base="dsol:distribution">
		        <xsd:attribute name="a" type="xsd:double" use="required"/>
    		    <xsd:attribute name="b" type="xsd:double" use="required"/>
    	    	<xsd:attribute name="c" type="xsd:double" use="required"/>
	    	</xsd:extension>
   		</xsd:complexContent>
    </xsd:complexType>
	
    <!-- the Normal distribution -->
    <xsd:complexType name="normal">
   		<xsd:complexContent>
	    	<xsd:extension base="dsol:distribution">
		        <xsd:attribute name="mean" type="xsd:double" use="required"/>
	    	    <xsd:attribute name="stdev" type="xsd:double" use="required"/>
	    	</xsd:extension>
   		</xsd:complexContent>
    </xsd:complexType>

    <!-- the Exponential distribution -->
    <xsd:complexType name="exponential">
   		<xsd:complexContent>
	    	<xsd:extension base="dsol:distribution">
		        <xsd:attribute name="lambda" type="xsd:double" use="required"/>
	    	</xsd:extension>
   		</xsd:complexContent>
    </xsd:complexType>

    <!-- the Constant distribution -->
    <xsd:complexType name="constant">
   		<xsd:complexContent>
	    	<xsd:extension base="dsol:distribution">
		        <xsd:attribute name="c" type="xsd:double" use="required"/>
	    	</xsd:extension>
   		</xsd:complexContent>
    </xsd:complexType>
    
    <!-- the collection definition -->
    <xsd:complexType name="distributionsType" mixed="false">
        <xsd:sequence>
            <xsd:element name="distribution" maxOccurs="unbounded" 
                minOccurs="0" type="dsol:distribution"/>
        </xsd:sequence>
    </xsd:complexType>
    
    <!-- the root element -->
     <xsd:element name="distributions" type="dsol:distributionsType"/>
</xsd:schema>