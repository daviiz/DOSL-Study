<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.w3.org/2001/XMLSchema 
                        http://www.w3.org/2001/XMLSchema.xsd"
    xmlns:color="http://www.simulation.tudelft.nl/color"
    targetNamespace="http://www.simulation.tudelft.nl/color">

    <!-- ###############################    TYPE DEFINITION     ############################# -->
		
    <!-- the byte with range 0..255 -->
    <xsd:simpleType name="byte255">
        <xsd:restriction base="xsd:int">
            <xsd:minInclusive value="0"/>
            <xsd:maxInclusive value="255"/>
        </xsd:restriction>
    </xsd:simpleType>
        
    <!-- Color definition -->
    <xsd:complexType name="color">
        <xsd:attribute name="R" type="color:byte255" use="required"/>
        <xsd:attribute name="G" type="color:byte255" use="required"/>
        <xsd:attribute name="B" type="color:byte255" use="required"/>
    </xsd:complexType>

</xsd:schema>
